<div class="d-flex justify-content-center">
    <div class="card border-info mb-3">
        <p>{{post.id}}</p>
        <h2>{{post.title}}</h2>
        <p>{{post.body}}</p>
        <p>Posted by: {{post.user.name}}</p>
    </div>

    <div class="card border-info mb-3">
        {{#each post.comments}}
        <p>{{body}}</p>
        {{/each}}
    </div>

    <div class="card border-info mb-3">
        <form class="frm_comment" data-id="{{post.id}}">
            <div class="from-group">
                <label class="from-label" for="txt_comment">Leave a comment</label>
                <textarea type="text" class="form-control" id="txt_comment"></textarea>
                <button type="submit" class="btn float-end">Submit</button>
            </div>
        </form>
    </div>
</div>

<script src="/js/singlePost.js"></script>